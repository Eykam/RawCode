<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backButton"
        style="@style/buttonTheme"
        android:layout_marginBottom="104dp"
        android:text="@string/backButtonLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/encryptButton"
        style="@style/buttonTheme"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="40dp"
        android:text="@string/encryptButtonLabel"
        app:layout_constraintBottom_toTopOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultingString" />

    <TextView
        android:id="@+id/resultingString"
        style="@style/labelTheme"
        android:text="@string/defaultResult"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <TextView
        android:id="@+id/shiftAmountLabel"
        style="@style/labelTheme"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="49dp"
        android:text="Shift = "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/resultingString"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shiftInput" />

    <EditText
        android:id="@+id/shiftInput"
        android:layout_width="289dp"
        android:layout_height="58dp"
        android:layout_marginTop="73dp"
        android:clickable="true"
        android:enabled="true"
        android:hint="Enter String"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>